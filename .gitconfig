[user]
    name = Jason Feng
    email = jason.feng@ratecity.com.au
[credential]
    helper = osxkeychain
[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true
[core]
    excludesfile = ~/.gitignore_global
    ignorecase = false

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustexitcode = true
[mergetool "sublimerge"]
    cmd = subl -n --wait \"$REMOTE\" \"$BASE\" \"$LOCAL\" \"$MERGED\" --command \"sublimerge_diff_views\"
    trustExitCode = false
[mergetool]
    keepBackup = true
    prompt = false
[merge]
    tool = Kaleidoscope 


[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool "sublimerge"]
    cmd = subl -n --wait \"$LOCAL\" \"$REMOTE\" --command \"sublimerge_diff_views {\\\"left_read_only\\\": false, \\\"right_read_only\\\": false}\"
[difftool]
    prompt = false
[diff]
    tool = Kaleidoscope 
    algorithm = patience


[alias]
    dtk=difftool
    mtk=mergetool
    dtsl = difftool --tool=sublimerge
    mtsl = mergetool --tool=sublimerge
    tree = log --branches --remotes --tags --graph --oneline --abbrev-commit --author-date-order --decorate --format=format:'%C(bold blue)%h%C(reset) %C(reset)%C(bold yellow)%d%C(reset) - %C(dim white)%aD (%ar)%C(reset)%n'' %C(bold cyan)%s%C(reset) %C(white)- %an%C(reset)'
    cl = clone
    st = status
    co = checkout
    aa = add --all
    fu = fetch upstream
    cm = commit -m
    ca = commit --amend
    b = branch
    bd = branch -D
[push]
    default = simple
