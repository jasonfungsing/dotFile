[user]
    name = Jason Feng
    email = jfeng@dius.com.au
[credential]
    helper = osxkeychain
[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true
[core]
    excludesfile = ~/.gitignore_global
    ignorecase = false

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustexitcode = true
[mergetool "sublimerge"]
    cmd = subl -n --wait \"$REMOTE\" \"$BASE\" \"$LOCAL\" \"$MERGED\" --command \"sublimerge_diff_views\"
    trustExitCode = false
[mergetool]
    keepBackup = false
    prompt = false
[merge]
    tool = Kaleidoscope

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool "sublimerge"]
    cmd = subl -n --wait \"$LOCAL\" \"$REMOTE\" --command \"sublimerge_diff_views {\\\"left_read_only\\\": true, \\\"right_read_only\\\": true}\"
[difftool]
    prompt = false
[diff]
    tool = Kaleidoscope
    algorithm = patience


[alias]
    dtk=difftool
    dtkc=difftool --cached
    mtk=mergetool
    mtkc=mergetool --cached

    dts = difftool --tool=sublimerge
    dtsc = difftool --tool=sublimerge --cached
    mts = mergetool --tool=sublimerge
    mtsc = mergetool --tool=sublimerge --cached

    tree = log --branches --remotes --tags --graph --oneline --abbrev-commit --author-date-order --decorate --format=format:'%C(bold blue)%h%C(reset) %C(reset)%C(bold yellow)%d%C(reset) - %C(dim white)%aD (%ar)%C(reset)%n'' %C(bold cyan)%s%C(reset) %C(white)- %an%C(reset)'
    cl = clone
    s = status
    co = checkout
    p = pull
    aa = add --all
    fu = fetch upstream
    rbum = rebase upstream/master
    cm = commit -m
    ca = commit --amend
    b = branch
    bd = branch -d
    bD = branch -D
    rmlb = branch -r | awk '{print $1}' | egrep -v -f /dev/fd/0 <(git branch -vv | grep origin) | awk '{print $1}' | xargs git branch -d

[push]
    default = simple
